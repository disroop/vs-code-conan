{
    "cmake.configureOnOpen": false,
    // "cmake.sourceDirectory": "${workspaceFolder}/demo",
    "C_Cpp.default.configurationProvider": "vector-of-boolean.cmake-tools",
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.loggingLevel": "Error",
    "testMate.cpp.test.parallelExecutionOfExecutableLimit": 1,
    "testMate.cpp.test.advancedExecutables": [
        {
          "pattern": "**/{build,Linux-None-Debug,cmake-build-Linux-None-Debug}/**/bin/*{test,Test,TEST}",
                     
        }
      ],   

    "todohighlight.include": [
      "**/*.c",
      "**/*.cpp",
      "**/*.h",
      "**/*.txt",
      "**/*.py"
    ],
    "python.pipenvPath": "/usr/bin/pip3",
    "python.linting.pylintArgs": ["--generate-members"],
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/_deps/**": true,
      "**/CMakeFiles/**": true,
      "**/.conan/*/**": true
    },
    "files.associations": {
      "string_view": "c",
      "*.tcc": "cpp",
      "string": "cpp",
      "ostream": "cpp",
      "sstream": "cpp",
      "utility": "cpp",
      "fstream": "cpp",
      "iosfwd": "cpp",
      "type_traits": "cpp",
      "array": "cpp",
      "atomic": "cpp",
      "bit": "cpp",
      "cctype": "cpp",
      "clocale": "cpp",
      "cmath": "cpp",
      "cstdarg": "cpp",
      "cstddef": "cpp",
      "cstdint": "cpp",
      "cstdio": "cpp",
      "cstdlib": "cpp",
      "cwchar": "cpp",
      "cwctype": "cpp",
      "deque": "cpp",
      "unordered_map": "cpp",
      "vector": "cpp",
      "exception": "cpp",
      "algorithm": "cpp",
      "functional": "cpp",
      "iterator": "cpp",
      "memory": "cpp",
      "memory_resource": "cpp",
      "numeric": "cpp",
      "optional": "cpp",
      "random": "cpp",
      "system_error": "cpp",
      "tuple": "cpp",
      "initializer_list": "cpp",
      "istream": "cpp",
      "limits": "cpp",
      "new": "cpp",
      "stdexcept": "cpp",
      "streambuf": "cpp",
      "cinttypes": "cpp",
      "typeinfo": "cpp"
    },
    "cmake.buildDirectory": "${workspaceFolder}/build/${buildKit}",
    "cmake.configureOnEdit": true,
    "cmake.parseBuildDiagnostics": true,
    "output.smartScroll.enabled": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "workbench.tree.indent": 20,
    "cortex-debug.armToolchainPath": "/opt/toolchain-arm/gcc-arm-none-eabi-9-2020-q2-update/bin",
    "python.envFile": "${workspaceFolder}/.env/dev.env",
    "workbench.colorCustomizations": {
      "activityBar.background": "#2aa5a1",
      "titleBar.activeBackground": "#a3d858",
      "titleBar.activeForeground": "#282734",
      "sideBar.background": "#282734",
      "editor.background": "#282734",
      "statusBar.background": "#282734"
      
    }
}